div(id="wrapper")
	div(id="content")
		div(class="header")
			table(width="100%")
				tr
					td(valign="center", width="180px")
						div(style="padding-right:0px;")
							img(src="http://www.tooctac.com/p/619168")
					td(width="100px")
						div(class="rightalignblock", style="max-width:90px;")
							span(class="menubaricon", id="commenticon")
								img(src="http://www.tooctac.com/p/b91280", class="iconsmall")
							span(class="menubaricon", id="discussionicon")
								img(src="http://www.tooctac.com/p/58b4a0", class="iconsmall")
							span(class="menubaricon", id="peopleicon")
								img(src="http://www.tooctac.com/p/63a3a5", class="iconsmall")
					
					td(width="240px")
						div
							input(id="mysearch2", type="search", placeholder="search blogs", class="inputboxclass")
					td
						div(class="rightalignblock")
							div(class="boldwhite", id="titletext") 
					td
						div(class="rightalignblock")
							span(id="propic")
							span(id="profilehome", class="boldwhite")
							span(id="profilehomearrow", class="menulink", onclick="showhomemenu()")
							a(href="#", class="blogbutton", onclick="loginFb()", id="altlogin") Log in via Facebook
					

							

		div(id="main", style="margin: 0; padding-top: 40px;")
			table(width="100%", valign="top", border-spacing="0px")
				tr
					td(width="480px", valign="top")
						div(class="content-column")
							div(id="writeroot")
						div(class="content-column")
							- for node in nodes					      
								div(class="content-segment")
									div(class="posttitle")
										span #{node.Name}
									div
										table
											tr
												td
													img(src="http://graph.facebook.com/#{node.FBId}/picture", class="smallimgb")
												td
													div(class="postauthor")
														span #{node.AuthorName}
													div(class="posttime")
														span(id="blogtime", name="blogtime", time="#{node.Created}") #{node.Created} 
													
										
									div(class="postsummary", id="details_#{node.Id}")
										span #{node.Desc}
										span(id="detailslink", name="detailslink", link="#{node.Id}") ...
									div(class="postfooter")
										span(class="postfooter-span")
											a(href="/post/#{node.Id}", target="_blank")
												img(src="http://www.tooctac.com/p/5a1ab")
										span(class="postfooter-span")
											img(src="http://www.tooctac.com/p/6269cc")
											span(class="postfooter-counters") #{node.ChildCount}
										span(class="postfooter-span")
											img(src="http://www.tooctac.com/p/ab6e9f")
											span(class="postfooter-counters") #{node.UniqueVisitCount}
										
										
									
						
					td(width="288px", valign="top")
						div
							

								


							
					td(width="256px", valign="top")
						div
							div(id="fb-root")
							
